{% if groups | length > 0 %}
    <table class='table table-bordered table-hover'>
        <thead>
        <tr>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Age</th>
            <th>Année scolaire</th>
            <th>Ecole</th>
            <th>Remarques</th>
        </tr>
        </thead>
        <tbody>
        {% for enfant in groups %}
            <tr>
                <td><a href="{{ path('enfant_show', { 'slugname': enfant.slugname }) }}">{{ enfant.nom }}</a></td>
                <td>{{ enfant.prenom }}</td>
                <td>{{ enfant.age }} ans</td>
                <td>{{ enfant.anneescolaire }}</td>
                <td>{{ enfant.ecole }}</td>
                <td class='text-muted'>{{ enfant.remarques | nl2br }}</td>
            </tr>
        {% endfor %}
        <tr class="active">
            <td class='text-center' colspan="5"><strong>Nombre d'enfants</strong></td>
            <td class='text-center'>{{ groups | length }}</td>
        </tr>
        </tbody>
    </table>
{% else %}
    <p>Personne</p>
{% endif %}
