{% if tuteur %}
    <span class="text-muted">

        {{ tuteur }}

        {% if tuteur.telephone %}
            | {{ tuteur.telephone }}
        {% endif %}

        {% if tuteur.telephoneBureau %}
            | {{ tuteur.telephoneBureau }}
        {% endif %}

        {% if tuteur.gsm %}
            | {{ tuteur.gsm }}
        {% endif %}

        {% if tuteur.nomconjoint %}
            <br/> {{ tuteur.nomconjoint }}
        {% endif %}

        {% if tuteur.prenomconjoint %}
            {{ tuteur.prenomconjoint }}
        {% endif %}

        {% if tuteur.gsmconjoint %}
            | {{ tuteur.gsmconjoint }}
        {% endif %}

        {% if tuteur.telephoneconjoint %}
            | {{ tuteur.telephoneconjoint }}
        {% endif %}

        {% if tuteur.telephoneBureauconjoint %}
            | {{ tuteur.telephoneBureauconjoint }}
        {% endif %}

        {% if enfant.remarques %}
            <br/>{{ enfant.remarques }}
        {% endif %}

        {% if enfant.accompagnateurs %}
            <br/>
            <strong>Accompagnateurs: </strong> {{ enfant.accompagnateurs | join(', ') }}
        {% endif %}
    </span>
{% endif %}