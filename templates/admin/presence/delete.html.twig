{% if is_granted('ROLE_MERCREDI_ADMIN') %}
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Suppression d'une présence</h4>
                </div>
                <div class="modal-body">    
                    Etes vous sur de vouloir <strong>supprimer</strong> <br /> la présence de <strong>{{ entity.enfant }}</strong> le <strong>{{ entity.jour.datejour|date('d-m-Y') }} ? </strong>
                    <br />sous la garde de <strong>{{ entity.tuteur }}</strong>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Annuler</button>                                
                    {{ form(delete_form) }}
                </div>
            </div>
        </div>
    </div>
{% endif %}   