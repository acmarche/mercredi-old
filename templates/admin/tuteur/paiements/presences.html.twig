{% if presences | length > 0 %}
    <table class='table table-bordered table-hover table-condensed'>
        <thead>
            <tr>                
                <th>Date</th>     
                <th>Ordre</th>
                <th>Prix plein</th>
                <th>Réduction</th>
                <th>Fratrie(s) présente(nt) </th>
                <th>Coût</th>                
            </tr>
        </thead>
        <tbody>
            {% set total = 0 %}
            {% for presence in presences %}
                {% set total = total + presence.cout %}                
                {% include 'admin/tuteur/paiements/line.html.twig' %}
            {% endfor %}
            <tr>            
                <td colspan="5" class="text-success"><strong>Total</strong></td>
                <td class="text-success"><strong>{{total}} €</strong></td>

            </tr>
        </tbody>
    </table>     
{% endif %}

{% if plainepresences | length > 0 %}

    <table class='table table-bordered table-hover table-condensed'>
        <thead>
            <tr>
                <th style="width: 20%;">Plaine</th>
                <th style="width: 15%;">Date</th>                                                
                <th style="width: 10%;">Ordre</th>
                <th style="width: 30%;">Frateri(s) présente(nt) </th>
                <th style="width: 10%;">Coût</th>                        
            </tr>
        </thead>
        <tbody>
            {% set total = 0 %}
            {% for plainepresence in plainepresences %}                
                {% set total = total + plainepresence.cout %}    
                {% include 'admin/tuteur/paiements/plaine_line.html.twig' with { 'presence' : plainepresence } %}
            {% endfor %}
            <tr>            
                <td colspan="4" class="text-success"><strong>Total</strong></td>
                <td class="text-success"><strong>{{total}} €</strong></td>                
            </tr>
        </tbody>
    </table>     
{% endif %}
