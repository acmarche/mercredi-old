{% extends 'admin/layout.html.twig' %}
{% block body %}

    <div class="page-header">
        <h3>Message du {{ message.createdAt | date('d-m-Y') }}</h3>
    </div>

    <h4 class="text-warning">{{ message.sujet }}</h4>

    {{ message.texte | nl2br }}

    <h4 class="text-warning">Destinataires</h4>

    <ul class="list-group">
        {% for destinataire in  message.destinataires %}
            <li class="list-group-item">{{ destinataire }}</li>
        {% endfor %}
    </ul>
{% endblock %}
