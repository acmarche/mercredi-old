<h4>Géré par</h4>

{% if users | length > 0 %}
    <table class='table table-bordered table-hover'>
        <thead>
        <tr>
            <th>Nom</th>
            <th>Nom d'utilisateur</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>
                    <a href="{{ path('utilisateur_show', { 'id': user.id }) }}">
                        {{ user.nom }}
                    </a>
                </td>
                <td>{{ user }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    <p class="text-warning">Aucun utilisateur associé</p>
{% endif %}

