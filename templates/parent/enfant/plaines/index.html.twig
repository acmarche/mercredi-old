{% if plaines | length > 0 %}
    <table class='table table-bordered table-hover'>
        <thead>
            <tr>
                <th>Plaine</th>
        </thead>
        <tbody>
            {% for enfantplaine in plaines %}
                {% set plaine = enfantplaine.plaine %}
            <td>
                <a title="Consulter ses prÃ©sences" href="{{ path('parent_plaine_show', { 'plaine_slugname' : plaine.slugname ,'enfant_uuid' : enfant.uuid}) }}">
                    {{ plaine }}
                </a>
