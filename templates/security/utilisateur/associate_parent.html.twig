{% extends 'admin/layout.html.twig' %}

{% block body %}
    <div class="page-header">
        <h3>Associer le compte {{ user }}</h3>
    </div>

    <div class="alert alert-info">
        En associant le compte à un parent, celui-ci aura accès aux enfants de ce dernier.
    </div>

    <div class="row">
        <div class="col-lg-8">
            {{ form(form) }}
        </div>
    </div>

    <a href="{{ path('utilisateur_show', {'id': user.id})}}">
        <span class="fas fa-list" aria-hidden="true"></span> Annuler et retour
    </a>

{% endblock %}