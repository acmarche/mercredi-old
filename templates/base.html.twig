<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    {% include 'favicon.html.twig' %}
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Mercredi - Enfance{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <!-- Bootstrap -->
    <link href="{{ asset('bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bootstrap/css/bootstrap-theme.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/app.css') }}" rel="stylesheet">
    <link href="{{ asset('css/enfance.css') }}" rel="stylesheet">
    <link href="{{ asset('css/typeahead.css') }}" rel="stylesheet">
    <link href="{{ asset('css/datepicker.css') }}" rel="stylesheet">
    <link href="{{ asset('css/print.css') }}" rel="stylesheet" media="print">
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="{{ asset('jquery/jquery.min.js') }}"></script>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script defer src="https://use.fontawesome.com/releases/v5.2.0/js/all.js"
            integrity="sha384-4oV5EgaV02iISL2ban6c/RmotsABqE4yZxZLcYMAdG7FAPsyHYAPpywE9PJo+Khy"
            crossorigin="anonymous"></script>
</head>
<body>
<div class="container-fluid">
    {% block banner %}

    {% endblock %}
    <!-- Static navbar -->
    <nav class="navbar navbar-default hidden-print" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                {% block brand %}
                    <a class="navbar-brand" href="{{ path('homepage') }}" title="Home"><span
                                class="fas fa-home"></span> Espace Parent Enfant</a>
                {% endblock %}
            </div>
            <div class="collapse navbar-collapse">

                {% set action = app.request.attributes.get("_route") %}
                <ul class="nav navbar-nav">
                    {% block menu_top %}

                    {% endblock %}
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    {% if app.user %}
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                               aria-haspopup="true"
                               aria-expanded="false">
                                <span class="glyphicon glyphicon-user"></span>
                                 {{ app.user.username }}
                                <span class="glyphicon glyphicon-chevron-down"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('user_change_password') }}">Mot de passe</a></li>
                                {{ render(controller(
                                    'AcMarche\\Mercredi\\Security\\Controller\\SecurityController::renderMenu',
                                    { 'max': 3 }
                                )) }}
                                <li role="separator" class="divider"></li>
                                <li><a href="{{ path('mercredi_logout') }}"
                                       title="A bientôt "><span
                                                class="glyphicon glyphicon-log-out"></span> Déconnexion</a>
                                </li>
                            </ul>
                        </li>
                    {% else %}
                        <li>
                            <a href="{{ path('mercredi_login') }}" title="Me connecter">
                                <span class="fas fa-sign-in-alt"></span> Me connecter</a>
                        </li>
                    {% endif %}
                </ul>

            </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
    </nav>

    {% include '_flash_messages.html.twig' %}

    {% block plaef %}
    {% endblock %}

    {% block body %}
    {% endblock %}

</div>

{% block footer %}
    <div id="footer" class="hidden-print">
        <div class="container">
            <p class="text-muted">Marche-en-Famenne. </p>
        </div>
    </div>
{% endblock %}

{% block javascripts %}{% endblock %}

<!-- Include all compiled plugins (below), or include individual files as needed -->
<script src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('js/typeahead.bundle.js') }} " type="text/javascript"></script>

{% block scripts %}

{% endblock %}
</body>
</html>